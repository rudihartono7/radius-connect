{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=RadiusConnect;User=radius_user;Password=your_password_here;SslMode=None;",
    "RadiusConnection": "Server=localhost;Database=radius;User=radius_user;Password=your_password_here;SslMode=None;"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-jwt-key-that-is-at-least-32-characters-long-for-security",
    "Issuer": "RadiusConnect",
    "Audience": "RadiusConnect.Api",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays": 7
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "https://localhost:3000",
    "http://localhost:5173",
    "https://localhost:5173"
  ],

  "RateLimit": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": "00:01:00",
    "ReplenishmentPeriod": "00:00:10",
    "TokensPerPeriod": 10,
    "AutoReplenishment": true
  },
  "Security": {
    "RequireHttps": false,
    "EnableCors": true,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 15
  }
}
